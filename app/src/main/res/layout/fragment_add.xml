<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/biruputih"
    tools:context=".AddFragment">

    <EditText
        android:id="@+id/editHargaKos"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:fontFamily="@font/poppins_regular"
        android:hint="Harga"
        android:inputType="text"
        android:textColor="@color/birungu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editKategoriKos" />

    <EditText
        android:id="@+id/editNamaKos"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:ems="10"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/birungu"
        android:hint="Nama Kos"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.397" />

    <EditText
        android:id="@+id/editAlamatKos"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="Deskripsi Kos"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/birungu"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editNamaKos"
        app:layout_constraintVertical_bias="0.045" />

    <EditText
        android:id="@+id/editKategoriKos"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:layout_marginBottom="232dp"
        android:ems="10"
        android:hint="Kategori"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/birungu"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editAlamatKos"
        app:layout_constraintVertical_bias="0.127" />

    <EditText
        android:id="@+id/editWAKos"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:layout_marginBottom="252dp"
        android:ems="10"
        android:fontFamily="@font/poppins_regular"
        android:hint="WhatsApp wa.me/"
        android:inputType="text"
        android:textColor="@color/birungu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editHargaKos"
        app:layout_constraintVertical_bias="0.989" />

    <EditText
        android:id="@+id/editLokasiKos"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="Lokasi GMaps"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/black"
        android:inputType="textWebEmailAddress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editWAKos"
        app:layout_constraintVertical_bias="0.12" />

    <Button
        android:id="@+id/btnSend"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:layout_marginBottom="80dp"
        android:text="Masukan Data"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editLokasiKos"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageAdd"
        android:layout_width="121dp"
        android:layout_height="112dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/editNamaKos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.457"
        tools:src="@drawable/ic_profile" />

    <Button
        android:id="@+id/btnPickImage"
        android:layout_width="132dp"
        android:layout_height="45dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Pick Image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageAdd" />

</androidx.constraintlayout.widget.ConstraintLayout>